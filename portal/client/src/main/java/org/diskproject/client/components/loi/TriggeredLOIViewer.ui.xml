<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:p='urn:import:com.vaadin.polymer.paper.widget'>

	<g:HTMLPanel>
		<style is="custom-style">
			.name {
                font-size: 14px;
                font-weight: bold;
            }
            .description {
                font-size: 12px;
                color: gray;
                font-style: italic;
            }
			.section {
                margin: 4px;
                padding: 10px;
                border-radius: 4px;
                border: 1px solid #ddd;
            }		
		</style>
		<div class="vertical layout section">
			<div class="name" ui:field="name" />
			<div class="description" ui:field="description" />
			
			<label class="small-grey">Workflows to run</label>
			<div class="description" ui:field="workflows" />
			
			<label class="small-grey">Meta-Workflows to run</label>
			<div class="description" ui:field="metaworkflows" />
			
			<div class="horizontal center-justified layout">			
				<p:PaperButton ui:field="followbutton">Follow this Line of Inquiry</p:PaperButton>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>